generator client {
  provider = "prisma-client"
  output = "../src/generated/prisma"
  moduleFormat = "cjs"
}

datasource db {
  provider = "postgresql"
}

model User {
  id              Int     @id @default(autoincrement())
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  fbUid           String  @unique
  email           String  @unique
  name            String
  memos           Memo[]
  hashtags        Hashtag[]
}

model Memo {
  id              Int       @id @default(autoincrement())
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  editedAt        DateTime  @default(now())
  date            DateTime
  owner           User      @relation(fields: [ownerId], references: [id])
  ownerId         Int
  title           String
  hashtags        Hashtag[]
  content         String

  @@index([date, ownerId])
}

model Hashtag {
  id              Int       @id @default(autoincrement())
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  referredAt      DateTime  @default(now())
  owner           User      @relation(fields: [ownerId], references: [id])
  ownerId         Int
  name            String
  memos           Memo[]

  @@unique([ownerId, name])
  @@index([referredAt])
}
